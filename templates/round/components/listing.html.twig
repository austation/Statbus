{% from 'macros/badge.html.twig' import ServerBadge, RoundBadge %}
<div class="table-responsive">
	<table class="table table-bordered align-middle">
		<thead>
			<tr>
				<th>ID</th>
				<th>Server</th>
				<th>Result</th>
				<th>Map</th>
				<th>Started</th>
				<th>Duration</th>
				<th>Ended</th>
				<th>Threat</th>
			</tr>
		</thead>
		<tbody>
			{% for r in rounds %}
				<tr class="table-{{r.getState.cssClass}}" data-href="{{full_url_for('round.single',{'id':r.getId})}}">
					<td>{{RoundBadge(r.getId)}}</td>
					<td>{{ServerBadge(r.getServer)}}</td>
					<td>
						<i class="{{r.getState.icon}}" title="{{r.getMode|title ?: 'N/A'}}"></i>
						<span>{{r.getState.value|title}}</span>
					</td>
					<td>{{r.getMap}}</td>
					<td>{{r.getStartDatetime ? r.getStartDatetime|date() : 'N/A'}}</td>
					<td>{{r.getDuration}}</td>
					<td>{{r.getEndDatetime ? r.getEndDatetime|date() : 'N/A'}}</td>
					<td>
						{% if r.getThreat %}
							<span class="badge d-block" style="{{r.getThreat.name.getStyle}}" data-bs-toggle="tooltip" title="Threat Level: {{r.getThreat.threat_level}} â€¢ Roundstart Budget: {{r.getThreat.round_start_budget}}"><i class="{{r.getThreat.name.getIcon}}"></i> {{r.getThreat.name.value}}</span>
						{% else %}
							N/A
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
<script>
const rows = document.querySelectorAll("[data-href]")
rows.forEach((e) => {
	e.addEventListener('click',() => {
		window.location = e.dataset.href
	})
})
</script>
